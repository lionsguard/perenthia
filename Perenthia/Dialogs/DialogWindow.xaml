<UserControl x:Class="Perenthia.Dialogs.DialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="Auto" Height="Auto">
    <Grid x:Name="LayoutRoot" Background="{x:Null}">
    	<Border HorizontalAlignment="Stretch" Margin="0,24,0,0" Padding="4,4,4,4" VerticalAlignment="Stretch" BorderThickness="2,2,2,2" CornerRadius="0,0,4,4" BorderBrush="{StaticResource BorderBrush}" Background="{StaticResource DialogFillBrush}">
			<Canvas x:Name="WindowContent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
		</Border>
		<Border Height="24" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Top" CornerRadius="4,4,0,0" BorderThickness="2,2,2,0" x:Name="TitleBar" Background="{StaticResource TitleBarBrush}" BorderBrush="{StaticResource BorderBrush}"/>
		<Button Height="20" HorizontalAlignment="Right" Margin="0,3,3,0" VerticalAlignment="Top" Width="20" Content="X" FontWeight="Bold" FontFamily="Trebuchet MS" FontSize="14" x:Name="CloseButton" Style="{StaticResource XButtonStyle}" Foreground="{StaticResource TextAltBrush}"/>
		<TextBlock Height="20" Margin="8,3,27,0" VerticalAlignment="Top" Text="Title" TextWrapping="Wrap" x:Name="TitleLabel" FontFamily="Georgia" FontSize="16" FontWeight="Bold" Foreground="{StaticResource HeadingBrush}" HorizontalAlignment="Left"/>
    </Grid>
</UserControl>
