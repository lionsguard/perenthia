<UserControl x:Class="Perenthia.Dialogs.NewPlayerIntroDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="450" Height="354" xmlns:Perenthia_Dialogs="clr-namespace:Perenthia.Dialogs">
    <Grid x:Name="LayoutRoot" Background="{x:Null}">
    	<TextBlock HorizontalAlignment="Left" Width="Auto" Foreground="{StaticResource HeadingBrush}" TextWrapping="Wrap" FontSize="12" Margin="8,8,0,140"><Run Text="Welcome to Perenthia, a virtual world of magic and monsters where your imagination is your only limitation."/><LineBreak/><Run Text=""/><LineBreak/><Run Text="To begin playing Perenthia you will need to create a Character. A character allows you to interact with the virtual world and allows the virtual world to interact with you. Think of your Character like an actor in a movie. You control the actions of the actor and the movie is the virtual world. "/><LineBreak/><LineBreak/><Run Text="Click on the &quot;Create a New Character&quot; button below to begin your journey."/><LineBreak/><Run Text=""/></TextBlock>
    	<Button Margin="122,0,122,71" Style="{StaticResource ButtonStyle}" Content="Create a New Character" FontFamily="Trebuchet MS" FontSize="14" FontWeight="Bold" Foreground="{StaticResource HeadingBrush}" x:Name="btnNew" Click="btnNew_Click" VerticalAlignment="Bottom" Height="55" HorizontalAlignment="Center" Width="192"/>

    </Grid>
</UserControl>
