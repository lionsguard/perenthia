<UserControl x:Class="Perenthia.Screens.GameOfflineScreen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="995" Height="620" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
    <Grid x:Name="LayoutRoot" Background="Black">

    	<Image Height="88" Margin="302.5,128,302.5,0" VerticalAlignment="Top" Width="300" Source="../Assets/logo.png" Stretch="Fill"/>
    	<TextBlock HorizontalAlignment="Center" Margin="0,254,0,0" VerticalAlignment="Top" FontFamily="Trebuchet MS" FontSize="20" Foreground="{StaticResource TextAltBrush}" Text="Perenthia is currently offline." TextWrapping="Wrap" d:LayoutOverrides="Height"/>
    	<TextBlock Margin="217,0,217,167" FontFamily="Trebuchet MS" FontSize="12" Foreground="{StaticResource TextAltBrush}" TextWrapping="Wrap" Height="126.867" VerticalAlignment="Bottom" d:LayoutOverrides="Height" TextAlignment="Center"><Run Text="During the Alpha and Beta testing phases of the game Perenthia will occasionally go offline to allow new updates to the game or lock game play after features have been tested. With each phase testers will receive emails informing them of when the game will come back online."/><LineBreak/><Run Text=""/></TextBlock>

    </Grid>
</UserControl>
