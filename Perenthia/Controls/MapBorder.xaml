<UserControl x:Class="Perenthia.Controls.MapBorder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="Auto" Height="Auto" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
    <Grid x:Name="LayoutRoot" Background="#0CFFFFFF">
    	<Rectangle Fill="{x:Null}" Stroke="{StaticResource LinkBrush}" x:Name="ctlBorder" StrokeThickness="2" MouseLeftButtonDown="ctlBorder_MouseLeftButtonDown" MouseEnter="ctlBorder_MouseEnter" MouseLeave="ctlBorder_MouseLeave"/>

    </Grid>
</UserControl>
