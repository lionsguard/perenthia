<UserControl x:Class="Perenthia.Controls.PropertyListItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="Auto" Height="Auto" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
    <Grid x:Name="LayoutRoot" Background="{x:Null}">

    	<TextBlock HorizontalAlignment="Left" Margin="0,4,0,0" x:Name="lblName" VerticalAlignment="Top" Width="81.087" FontFamily="Trebuchet MS" FontSize="10" Foreground="{StaticResource TextAltBrush}" Text="Name" TextWrapping="Wrap" d:IsLocked="True"/>
    	<TextBox FontFamily="Trebuchet MS" FontSize="10" Margin="85,0,0,0" x:Name="txtValue" Style="{StaticResource TextBoxStyle}" VerticalAlignment="Top" Width="125" Text="" TextWrapping="Wrap" d:LayoutOverrides="HorizontalAlignment, Height" Visibility="Visible" TextChanged="txtValue_TextChanged" Foreground="{StaticResource TextAltBrush}"/>
    	<CheckBox Margin="85,3,51,0" x:Name="cbxValue" VerticalAlignment="Top" Content="" d:LayoutOverrides="Width" Visibility="Collapsed" Checked="cbxValue_Checked" Unchecked="cbxValue_Unchecked"/>
    	<ComboBox Margin="85,1,0,0" x:Name="cboValue" Style="{StaticResource ComboBoxStyle}" VerticalAlignment="Top" d:LayoutOverrides="Width" Visibility="Collapsed" SelectionChanged="cboValue_SelectionChanged"/>

    </Grid>
</UserControl>
