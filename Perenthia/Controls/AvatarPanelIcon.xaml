<UserControl x:Class="Perenthia.Controls.AvatarPanelIcon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="26" Height="26">
    <Grid x:Name="LayoutRoot" Background="{x:Null}">
		<Image x:Name="imgMain" Source="../Assets/avatar-blank.png" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
			<Image.Clip>
				<EllipseGeometry Center="13,13" RadiusX="13" RadiusY="13"/>
			</Image.Clip>
		</Image>
		<Ellipse Height="26" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Bottom" Width="26" Fill="{x:Null}" Stroke="{StaticResource BorderBrush}" StrokeThickness="2"/>
    </Grid>
</UserControl>
