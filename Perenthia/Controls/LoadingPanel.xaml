<UserControl x:Class="Perenthia.Controls.LoadingPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="Auto" Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Grid x:Name="LayoutRoot" Background="#FF000000">
    	<TextBlock x:Name="lblLoading" FontFamily="Trebuchet MS" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Text="Loading..." TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="8,8,8,8" />
    </Grid>
</UserControl>
