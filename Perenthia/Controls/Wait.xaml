<UserControl x:Class="Perenthia.Controls.Wait"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="Auto" Height="Auto" Background="{x:Null}" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
    <Grid x:Name="LayoutRoot" Background="{StaticResource DialogFillBrush}">
    	<Border Height="200" HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" BorderBrush="{StaticResource BorderBrush}" BorderThickness="2,2,2,2" CornerRadius="4,4,4,4" Margin="8,8,8,8" Background="{StaticResource PanelBrush}">
            <Grid>
    		    <TextBlock x:Name="txtContent" Text="Processing request..." TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" FontFamily="Portable User Interface" Height="19" Margin="8,66,8,0" VerticalAlignment="Top" d:LayoutOverrides="VerticalAlignment">
    		    	<TextBlock.Foreground>
    		    		<SolidColorBrush Color="{StaticResource HeadingColor}"/>
    		    	</TextBlock.Foreground>
    		    </TextBlock>
                <ProgressBar x:Name="pgMain" IsIndeterminate="True" Height="20" Margin="73,89,73,87" Width="300" d:LayoutOverrides="Height" HorizontalAlignment="Center" />
            </Grid>
    	</Border>

    </Grid>
</UserControl>
