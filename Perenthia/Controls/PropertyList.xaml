<UserControl x:Class="Perenthia.Controls.PropertyList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="Auto" Height="Auto">
    <Grid x:Name="LayoutRoot" Background="{x:Null}">
    	<ScrollViewer Height="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Style="{StaticResource ScrollViewerStyle}">
    		<StackPanel Height="Auto" Width="Auto" x:Name="ctlItems"/>
    	</ScrollViewer>

    </Grid>
</UserControl>
