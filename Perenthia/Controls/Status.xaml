<UserControl x:Class="Perenthia.Controls.Status"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="Auto" Height="Auto" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
    <Grid x:Name="LayoutRoot" Background="{x:Null}">
    	<Border HorizontalAlignment="Stretch" Margin="0,0,0,3" Width="Auto" Background="{StaticResource DialogFillBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="2,2,2,2" CornerRadius="4,4,4,4" Padding="2,2,2,2">
    		<Grid Height="Auto" Width="Auto">
    			<TextBox HorizontalAlignment="Stretch" Text="" TextWrapping="Wrap" Style="{StaticResource TextBoxStyle}" Foreground="{StaticResource TextAltBrush}" AcceptsReturn="True" Margin="0,0,24,0" FontFamily="Trebuchet MS" x:Name="txtStatus" TextChanged="txtStatus_TextChanged" KeyDown="txtStatus_KeyDown" Height="Auto" MaxLength="140"/>
    			<Button Height="Auto" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="Auto" Content="" Margin="0,0,0,0" Foreground="{StaticResource HeadingBrush}" x:Name="btnUpdate" Click="btnUpdate_Click" ToolTipService.ToolTip="Update Status" Cursor="Hand" Style="{StaticResource ArrowButtonStyle}"/>
    		</Grid>
    	</Border>
    </Grid>
</UserControl>
