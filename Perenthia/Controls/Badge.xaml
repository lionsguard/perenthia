<UserControl x:Class="Perenthia.Controls.Badge"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Height="24" HorizontalAlignment="Left" VerticalAlignment="Top" Width="24">
		<Ellipse>
			<Ellipse.Stroke>
				<SolidColorBrush Color="{StaticResource BorderAltColor}"/>
			</Ellipse.Stroke>
			<Ellipse.Fill>
				<SolidColorBrush Color="{StaticResource WindowBackgroundColor}"/>
			</Ellipse.Fill>
		</Ellipse>
		<Image Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" Source="{Binding ImageSource}"/>
	</Grid>
</UserControl>
