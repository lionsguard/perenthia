<UserControl x:Class="Perenthia.Controls.InventoryActionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="300" Height="400" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
	<Grid x:Name="LayoutRoot" Background="{x:Null}">

		<TextBlock VerticalAlignment="Top" FontFamily="Georgia" FontSize="14" FontWeight="Bold" Foreground="{StaticResource HeadingBrush}" Text="Corpse of {0}" TextWrapping="Wrap" x:Name="lblName" Margin="0,0,83.808,0"/>
		<ScrollViewer HorizontalAlignment="Left" Width="300" Margin="0,26,0,0" Style="{StaticResource ScrollViewerStyle}">
			<StackPanel x:Name="lstInventory"/>
		</ScrollViewer>
		<Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="LOOT ALL" Margin="0,0,-0.192,0" Width="80" x:Name="btnLootAll" Style="{StaticResource ButtonStyle}" d:LayoutOverrides="VerticalAlignment" Height="22" Foreground="{StaticResource HeadingBrush}" Cursor="Hand" Click="btnLootAll_Click" FontWeight="Bold" FontFamily="Portable User Interface"/>

	</Grid>
</UserControl>
