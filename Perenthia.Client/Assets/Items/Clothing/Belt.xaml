<UserControl x:Class="Perenthia.Assets.Items.Clothing.Belt"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="32" Height="32">
	<Grid x:Name="LayoutRoot">
		<Rectangle Height="4" Margin="1,0" VerticalAlignment="Center">
			<Rectangle.Fill>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FF7E4B0E" Offset="0.5"/>
					<GradientStop Color="#FF341E05" Offset="1"/>
					<GradientStop Color="#FF341E05"/>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>
		<Rectangle Stroke="#FFD8AA0C" Margin="0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="6" Height="6"/>

	</Grid>
</UserControl>